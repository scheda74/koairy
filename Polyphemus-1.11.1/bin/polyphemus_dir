# "git show-dev-root" does the same but is not available when building
# Polyphemus without ".git" and ".dev-toolbox" directories.
while [[ $(pwd) != / ]]; do
    [[ -f version ]] && grep -qi polyphemus version && pwd && break
    cd ..
done
