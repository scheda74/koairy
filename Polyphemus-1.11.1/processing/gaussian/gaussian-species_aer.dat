[scavenging]

# List of the species for which scavenging occurs
# The scavenging coefficient of the others will be set to 0

Iodine  Caesium


[deposition]

# List of the species for which deposition occurs
# The deposition velocity of the others will be set to 0

Caesium  Iodine


[scavenging_constant]

# Scavenging coefficient of the species  ( seconds^(-1) )

Caesium: 1.e-4
Iodine: 1.e-4


[scavenging_belot]

# Coefficients a and b for the Belot parameterization (a * po ^ b)
# where po is the rainfall rate (mm/hour).

# Species 	a 		b
Caesium:	2.8e-05 	0.51
Iodine:		7e-05  		0.69


[scavenging_constant_aer]

# Constant scavenging coefficient
# per diameter (s^(-1)).

# The first column shows the diameter index.
0: 4.0e-5
1: 1.2e-4
2: 1.6e-4
3: 2.4e-4

[deposition_constant]

# Dry deposition velocities of the species (m/s)

Caesium: 0.05e-2
Iodine: 0.5e-2


[deposition_constant_aer]

# Constant dry deposition velocity (diffusive part)
# per diameter (m/s).

# The first column shows the diameter index.
0: 3.e-3
1: 1.3e-2
2: 1.5e-2
3: 1.8e-2


[density_aer]

# Particle density (aerosol species) (kg/m^3).

